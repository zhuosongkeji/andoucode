<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorNavy">
        <include layout="@layout/base_title_view"/>
    </LinearLayout>
    <TextView
        android:text="退款金额:￥184.5"
        android:textColor="@color/red"
        android:textSize="@dimen/typeface12sp"
        android:layout_marginBottom="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:textColor="#323232"
            android:textSize="@dimen/typeface12sp"
            android:text="退款原因"
            android:layout_marginLeft="@dimen/dp_15"
             android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ly_chooserefundreason"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="#969696"
                android:textSize="@dimen/typeface12sp"
                android:text="请选择退款原因"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/ic_jiantouright_gary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:textColor="@color/white"
        android:textSize="@dimen/typeface13sp"
        android:text="申请退款"
        android:background="@drawable/shape_button"
        android:layout_marginTop="200dp"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
</LinearLayout>
