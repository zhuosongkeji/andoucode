<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5ED3AE"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/back_icon" />

        <RelativeLayout
            android:layout_width="306dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/img_back"
            android:background="@drawable/shape_layout">

            <EditText
                android:id="@+id/search_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@null"
                android:hint="@string/search"
                android:textColorHint="#919191"
                android:textColor="#919191"
                android:textSize="@dimen/typeface12sp" />

            <LinearLayout
                android:id="@+id/search_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|right">

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@mipmap/search" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/onlinebanner"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@color/colorNavy"
                app:AutoPlayTime="3000"
                app:isAutoPlay="true"
                app:isShowIndicatorOnlyOne="true"
                app:pageChangeDuration="800"
                app:pointNormal="@drawable/shape_noraml"
                app:pointSelect="@drawable/shape_selected"
                app:pointsPosition="CENTER"
                app:tipTextSize="12sp" />


            <com.wihaohao.PageGridView
                android:id="@+id/vp_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                app:indicatorGravity="right"
                app:indicatorPadding="10dp"
                app:isShowIndicator="false"
                app:itemView="@layout/fragment_category_view"
                app:numColumns="4"
                app:pageSize="8" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7F7F7"
                android:orientation="horizontal"
                android:padding="@dimen/dp_4">

                <ImageView
                    android:id="@+id/iv_activity_plan_image"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_105"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/miaosha" />

                <ImageView

                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_105"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/miaosha" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#F7F7F7"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:background="@color/white"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_13"
                        android:paddingTop="@dimen/dp_14">

                        <TextView
                            android:id="@+id/tv_today_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日上新"
                            android:textColor="#333333"
                            android:textSize="@dimen/typeface14sp" />

                        <TextView
                            android:id="@+id/tv_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_today_new"
                            android:text="定期更新"
                            android:textColor="#F8D587"
                            android:textSize="@dimen/typeface11sp" />

                        <ImageView
                            android:id="@+id/iv_tv_today_new_image"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="107dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/dp_13"
                            android:src="@mipmap/gengxin" />
                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E7E7E7" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_hot_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dp_26"
                                android:paddingTop="@dimen/dp_14"
                                android:text="爆款合集"
                                android:textColor="#333333"
                                android:textSize="@dimen/typeface14sp" />

                            <TextView
                                android:id="@+id/tv_hot_this"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_hot_all"
                                android:paddingLeft="@dimen/dp_26"
                                android:text="想要的爆款都在这里"
                                android:textColor="#F8D587"
                                android:textSize="@dimen/typeface11sp" />

                            <ImageView
                                android:id="@+id/iv_hot_image"
                                android:layout_width="91dp"
                                android:layout_height="66dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:paddingBottom="@dimen/dp_5"
                                android:src="@mipmap/baokuan" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E7E7E7" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dp_11"
                                    android:text="海外合集"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/typeface14sp" />

                                <ImageView
                                    android:layout_width="@dimen/dp_75"
                                    android:layout_height="43dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/biao" />

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#E7E7E7" />


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dp_11"
                                    android:text="有好货"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/typeface14sp" />

                                <ImageView
                                    android:layout_width="76dp"
                                    android:layout_height="47dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/biao" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_11"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10">


                    <TextView
                        android:id="@+id/tv_recommend_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐产品"
                        android:textColor="#FF9537"
                        android:textSize="@dimen/typeface14sp" />

                    <TextView
                        android:id="@+id/tv_recommend_english"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_recommend_product"
                        android:text="HOT PRODUCTS"
                        android:textColor="#FF9537"
                        android:textSize="@dimen/typeface9sp" />


                    <LinearLayout
                        android:id="@+id/tv_recommend_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_8"
                            android:gravity="center"
                            android:text="@string/see_more"
                            android:textColor="@color/colorOrange"
                            android:textSize="@dimen/typeface14sp" />

                        <ImageView
                            android:id="@+id/iv_more"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_jiantouright_orange" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <!--推荐产品-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recommend_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_11"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10">


                    <TextView
                        android:id="@+id/tv_special_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特价产品"
                        android:textColor="#FF9537"
                        android:textSize="@dimen/typeface14sp" />

                    <TextView
                        android:id="@+id/tv_special_english"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_special_product"
                        android:text="HOT PRODUCTS"
                        android:textColor="#FF9537"
                        android:textSize="@dimen/typeface9sp" />


                    <LinearLayout
                        android:id="@+id/tv_special_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_8"
                            android:gravity="center"
                            android:text="@string/see_more"
                            android:textColor="@color/colorOrange"
                            android:textSize="@dimen/typeface14sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_jiantouright_orange" />
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>

            <!--特价产品-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_special_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>