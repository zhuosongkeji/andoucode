<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNavy"
    android:orientation="vertical">

    <include layout="@layout/base_title_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/iv_vip_img"
            android:layout_width="57dp"
            android:layout_height="58dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/icon_weixin"/>

        <TextView
            android:id="@+id/tv_vip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暮看日西沉"
            android:textColor="@color/white"
            android:textSize="@dimen/typeface16sp"
            android:layout_alignTop="@+id/iv_vip_img"
            android:layout_toRightOf="@+id/iv_vip_img"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_vip_name"
            android:layout_alignBottom="@+id/tv_vip_name"
            android:text="VIP1"/>







    </RelativeLayout>



</LinearLayout>
