<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="6dp"
    android:background="@drawable/bg_shape"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5ED3AE"
        android:padding="@dimen/dp_5"
        android:text="要求及收费"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/typeface14sp"
        android:textColor="#646464"
        android:text="@string/totel_pay_hint1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/typeface14sp"
        android:textColor="#646464"
        android:text="@string/hotel_pay_hint2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/typeface14sp"
        android:textColor="#646464"
        android:text="@string/hotel_pay_hint3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/typeface14sp"
        android:textColor="#646464"
        android:text="@string/hotel_pay_hint4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/typeface14sp"
        android:textColor="#646464"
        android:text="@string/hotel_pay_hint5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/typeface14sp"
        android:textColor="#646464"
        android:text="@string/hotel_pay_hint6"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/typeface14sp"
    android:textColor="#646464"
    android:text="@string/hotel_pay_hint7"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/typeface14sp"
    android:textColor="#646464"
    android:text="@string/hotel_pay_hint8"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/typeface14sp"
    android:textColor="#646464"
    android:text="@string/hotel_pay_hint9"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/typeface14sp"
        android:textColor="#646464"
        android:text="@string/hotel_pay_hint10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/typeface14sp"
        android:textColor="#646464"
        android:text="@string/hotel_pay_hint11"/>


    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="@dimen/dp_115"
            android:layout_height="@dimen/dp_30"
            android:layout_toLeftOf="@+id/view"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#ECECEC"
            android:text="取消"/>

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_centerInParent="true"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/bt_go_on"
            android:layout_width="@dimen/dp_115"
            android:layout_toRightOf="@+id/view"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/shape_button"
            android:textColor="@color/white"
            android:text="同意并继续"/>
    </RelativeLayout>

    </LinearLayout>

</LinearLayout>