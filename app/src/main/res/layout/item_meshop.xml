<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shopIconImg"
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:layout_margin="@dimen/dp_15"
            android:src="@mipmap/shop_icon" />

        <TextView
            android:id="@+id/shopNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="亲润官方旗舰店"
            android:textColor="#323232"
            android:textSize="@dimen/typeface15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="#EBEBEB" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/orderNumTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="订单编号:2019061417459987"
            android:textColor="#646464"
            android:textSize="@dimen/typeface12sp" />

        <TextView
            android:id="@+id/statusTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="待付款"
            android:textColor="@color/red"
            android:textSize="@dimen/typeface15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="#fff8f8f8"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="17dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/meshop_pic"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="4dp"
            tools:src="@mipmap/ic_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="2"
                    android:textColor="#ff646464"
                    android:textSize="12sp"
                    tools:text="亲润孕妇化妆品套装BB霜遮瑕孕遮瑕孕遮B霜遮瑕孕遮瑕孕遮瑕B霜遮瑕孕遮瑕孕遮瑕瑕孕遮瑕孕妇护" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#fff34545"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/priceTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff34545"
                        android:textSize="12sp"
                        tools:text="288" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/specTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="2"
                    android:textColor="#ff969696"
                    android:textSize="12sp"
                    tools:text="四件套" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textColor="#ff969696"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/countTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff969696"
                        android:textSize="12sp"
                        tools:text="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:"
            android:textColor="#646464" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥288"
            android:textColor="@color/red" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#F2F2F2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="end">

        <Button
            android:id="@+id/btn_orderdetails"
            android:layout_width="76dp"
            android:layout_height="@dimen/dp_26"
            android:layout_marginEnd="15dp"
            android:background="@mipmap/button_n"
            android:text="订单详情"
            android:textColor="#969696"
            android:textSize="@dimen/typeface11sp" />

        <Button
            android:id="@+id/btn_check_logistics"
            android:layout_width="76dp"
            android:layout_height="@dimen/dp_26"
            android:layout_marginEnd="15dp"
            android:background="@mipmap/button_n"
            android:text="查看物流"
            android:textColor="#969696"
            android:textSize="@dimen/typeface11sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_gotopayment"
            android:layout_width="76dp"
            android:layout_height="@dimen/dp_26"
            android:layout_gravity="center|right"
            android:layout_marginEnd="15dp"
            android:background="@mipmap/button_c"
            android:text="去付款"
            android:textColor="#61C29C"
            android:textSize="@dimen/typeface11sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_comment"
            android:layout_width="90dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:background="@mipmap/button_c"
            android:text="发表评论"
            android:textColor="#61C29C"
            android:textSize="@dimen/typeface12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_getgoods"
            android:layout_width="90dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:background="@mipmap/button_c"
            android:text="确认收货"
            android:textColor="#61C29C"
            android:textSize="@dimen/typeface12sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F7F7F7" />
</LinearLayout>
