<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="@dimen/dp_15"
            android:src="@mipmap/hotelicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/typeface15sp"
            android:layout_gravity="center"
            android:text="精尚来公寓酒店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="#EBEBEB"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/typeface12sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="订单编号:2019061417459987"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerVertical="true"
            android:text="待入住"
            android:textColor="@color/red"
            android:textSize="@dimen/typeface15sp"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_gravity="center"
        android:background="@mipmap/shopbg"
        android:layout_width="345dp"
        android:layout_height="112dp">
        <ImageView
            android:id="@+id/meshop_pic"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:src="@mipmap/hotelbg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/ry_center"
            android:layout_toRightOf="@id/meshop_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_17"
                android:text="阳光大床房（带大阳台）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:text="X1"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_toRightOf="@id/ry_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/typeface15sp"
                android:textColor="@color/red"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_17"
                android:text="￥288"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:text="X1"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_15"
        android:text="合计:￥288"
        android:layout_marginRight="15dp"
        android:layout_gravity="center|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="#F2F2F2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_hotelorderdetails"
            android:textColor="#61C29C"
            android:textSize="@dimen/typeface11sp"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:background="@mipmap/button_c"
            android:layout_width="76dp"
            android:text="订单详情"
            android:layout_height="@dimen/dp_26"/>
<!--        <Button-->
<!--            android:textColor="#61C29C"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:textSize="@dimen/typeface11sp"-->
<!--            android:layout_marginRight="@dimen/dp_15"-->
<!--            android:layout_gravity="center|right"-->
<!--            android:background="@mipmap/button_c"-->
<!--            android:layout_width="76dp"-->
<!--            android:text="去付款"-->
<!--            android:layout_height="@dimen/dp_26"/>-->
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"/>
</LinearLayout>
