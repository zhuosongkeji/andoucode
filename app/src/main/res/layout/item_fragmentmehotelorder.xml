<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_order_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/hotelicon" />

        <TextView
            android:id="@+id/tv_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_11"
            android:text="精尚来公寓酒店"
            android:textColor="#323232"
            android:textSize="@dimen/typeface12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#EBEBEB" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单编号:2019061417459987"
            android:textColor="#646464"
            android:textSize="@dimen/typeface12sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="待入住"
            android:textColor="#F34545"
            android:textSize="@dimen/typeface12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:background="@mipmap/shopbg">

        <ImageView
            android:id="@+id/iv_house_img"
            android:layout_width="@dimen/dp_100"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_5"
            android:src="@mipmap/hotelbg" />


        <TextView
            android:id="@+id/tv_house_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_house_img"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toRightOf="@+id/iv_house_img"
            android:text="阳光大床房（带大阳台）"
            android:textColor="#646464"
            android:textSize="@dimen/typeface12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_house_img"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toRightOf="@+id/iv_house_img"
            android:text="X1"
            android:textColor="#969696"
            android:textSize="@dimen/typeface12sp" />


        <TextView
            android:id="@+id/tv_house_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="¥288"
            android:textColor="#F34545"
            android:textSize="@dimen/typeface12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_house_all_price"
            android:text="合计："
            android:textColor="#787878"
            android:textSize="@dimen/typeface12sp" />

        <TextView
            android:id="@+id/tv_house_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="¥288"
            android:textColor="@color/red" />

    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#F2F2F2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">


        <Button
            android:id="@+id/btn_hotelorderdetails"
            android:layout_width="76dp"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:background="@mipmap/button_c"
            android:text="订单详情"
            android:textColor="#61C29C"
            android:textSize="@dimen/typeface11sp" />

        <Button
            android:id="@+id/btn_evaluate"
            android:layout_width="76dp"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toLeftOf="@+id/btn_hotelorderdetails"
            android:background="@mipmap/button_c"
            android:text="去评价"
            android:textColor="#61C29C"
            android:textSize="@dimen/typeface11sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F7F7F7" />
</LinearLayout>
