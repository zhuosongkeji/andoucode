<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.hotel.HotelOnlineReserveActivity">

    <com.zskjprojectj.andouclient.view.TopView
        android:id="@+id/alltopview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:topview_left="@mipmap/ic_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_15">

                <ImageView
                    android:id="@+id/hotel_image"
                    android:layout_width="83dp"
                    android:layout_height="@dimen/dp_75"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/hotel_details" />

                <TextView
                    android:id="@+id/hotel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/hotel_image"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toRightOf="@+id/hotel_image"
                    android:text="精尚来公寓酒店"
                    android:textColor="#323232"
                    android:textSize="@dimen/typeface12sp" />

                <TextView
                    android:id="@+id/hotel_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotel_name"
                    android:layout_alignStart="@+id/hotel_name"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="阳光大床房（带大阳台）"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface10sp" />

                <TextView
                    android:id="@+id/flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/hotel_price"
                    android:layout_toLeftOf="@+id/hotel_price"
                    android:text="¥"
                    android:textColor="#FF493E"
                    android:textSize="@dimen/typeface10sp" />

                <TextView
                    android:id="@+id/hotel_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="187"
                    android:textColor="#FF493E"
                    android:textSize="@dimen/typeface14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="#E7E7E7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/check_in_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/start_time"
                    android:text="入住时间"
                    android:textSize="@dimen/typeface11sp" />

                <TextView
                    android:id="@+id/leave_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/end_time"
                    android:text="离开时间"
                    android:textSize="@dimen/typeface11sp" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/night_numeber"
                    android:layout_alignEnd="@+id/night_numeber"
                    android:layout_marginRight="80dp"
                    android:text="07月20日"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface21sp" />

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/night_numeber"
                    android:layout_alignTop="@+id/night_numeber"
                    android:layout_marginLeft="80dp"
                    android:text="07月21日"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface21sp" />

                <TextView
                    android:id="@+id/night_numeber"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_button_reserve"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:text="1晚"
                    android:textColor="#5ED3AE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/night_numeber"
                    android:text="—"
                    android:textColor="#5ED3AE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/night_numeber"
                    android:text="—"
                    android:textColor="#5ED3AE" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_22"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入住人数"
                    android:textColor="#555555"
                    android:textSize="@dimen/typeface12sp" />

                <Button
                    android:id="@+id/bt_minus"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/tv_person_number"
                    android:background="@drawable/button_add"
                    android:text="-"
                    android:textColor="#969696" />

                <Button
                    android:id="@+id/bt_add"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/button_add"
                    android:text="+"
                    android:textColor="#969696" />

                <TextView
                    android:id="@+id/tv_person_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/bt_add"
                    android:text="1人" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_22"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:textColor="#555555"
                    android:textSize="@dimen/typeface12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="请填写真实姓名"
                    android:textColor="#969696"
                    android:textSize="@dimen/typeface12sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_22"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="#555555"
                    android:textSize="@dimen/typeface12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="请输入手机号"
                    android:textColor="#969696"
                    android:textSize="@dimen/typeface12sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_22"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预订须知"
                    android:textColor="#555555"
                    android:textSize="@dimen/typeface12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="要求及收费"
                    android:textColor="#969696"
                    android:textSize="@dimen/typeface12sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_22"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用积分"
                    android:textColor="#555555"
                    android:textSize="@dimen/typeface12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawableRight="@mipmap/triangle_icon"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="1000"
                    android:textColor="#969696"
                    android:textSize="@dimen/typeface12sp" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_22"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择支付方式"
                    android:textColor="#555555"
                    android:textSize="@dimen/typeface13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_17"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:id="@+id/tv_union"
                    android:layout_width="38dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/icon_union_pay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_toRightOf="@+id/tv_union"
                    android:text="银联支付"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface12sp" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cb_union_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:button="@drawable/selector_checkbox" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_17"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:id="@+id/tv_weixin"
                    android:layout_width="38dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/icon_weixin_pay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_toRightOf="@+id/tv_weixin"
                    android:text="银联支付"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface12sp" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cb_weixin_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:button="@drawable/selector_checkbox" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_17"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:id="@+id/tv_alipay"
                    android:layout_width="38dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/icon_alipay_pay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_toRightOf="@+id/tv_alipay"
                    android:text="银联支付"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface12sp" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cb_alipay_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:button="@drawable/selector_checkbox" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_17"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:id="@+id/tv_balance"
                    android:layout_width="38dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/icon_balance_pay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_toRightOf="@+id/tv_balance"
                    android:text="银联支付"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface12sp" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cb_balance_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:button="@drawable/selector_checkbox" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_22"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计"
                    android:textColor="#555555"
                    android:textSize="@dimen/typeface12sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="¥187"
                        android:textColor="#FF493E"
                        android:textSize="@dimen/typeface18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="订单总额：" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_reserve"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#5ED3AE"
                    android:gravity="center"
                    android:text="立即订房"
                    android:textSize="@dimen/typeface12sp"
                    android:textColor="@color/white" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>