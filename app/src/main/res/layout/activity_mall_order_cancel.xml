<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rv_refund_reason"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="取消订单原因"
            android:textColor="#323232"
            android:textSize="@dimen/typeface12sp" />

        <TextView
            android:id="@+id/tv_refund_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toLeftOf="@+id/ly_chooserefundreason"
            android:layout_toRightOf="@+id/text"
            android:text=""
            android:textColor="#323232"
            android:textSize="@dimen/typeface12sp" />

        <LinearLayout
            android:id="@+id/ly_chooserefundreason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reasonTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:text="请选择取消订单的原因"
                android:textColor="#969696"
                android:textSize="@dimen/typeface12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/ic_jiantouright_gary" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F7F7F7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消订单说明："
            android:textColor="#333333"
            android:textSize="@dimen/typeface12sp" />

        <EditText
            android:id="@+id/et_dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="选填"
            android:layout_marginTop="20dp"
            android:textColor="#939094"
            android:textColorHint="#939094"
            android:textSize="@dimen/typeface12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_commint"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="200dp"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_button"
        android:text="取消订单"
        android:textColor="@color/white"
        android:textSize="@dimen/typeface13sp" />
</LinearLayout>
