<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7"
    android:layout_height="match_parent">
    <include layout="@layout/view_top_bar"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_18"
        android:layout_height="110dp">
        <ImageView
            android:src="@mipmap/one_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/typeface12sp"
                android:textColor="#646464"
                android:text="产品描述"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="@dimen/dp_50"
                android:src="@mipmap/ic_plant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:textColor="#969696"
        android:textSize="@dimen/typeface12sp"
        android:gravity="top"
        android:minLines="5"
        android:hint="商品满足您的期待吗？说说您的评价吧！"
        android:layout_width="match_parent"
        android:layout_height="110dp"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="190dp">
        <TextView
            android:layout_marginBottom="@dimen/dp_22"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_22"
            android:text="上传图片"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ImageView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/icon_add_pic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="@dimen/dp_30"
        android:textColor="@color/white"
        android:textSize="@dimen/typeface13sp"
        android:text="发表评论"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/shape_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
</LinearLayout>
