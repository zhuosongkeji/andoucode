<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <RelativeLayout
        android:id="@+id/content_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="#ffffff"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_order_name"
            android:layout_width="159dp"
            android:layout_height="33dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="@dimen/dp_13"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="亲润孕妇化妆品套装BB霜遮瑕 孕妇护肤品豆...... "
            android:textColor="#404040"
            android:textSize="@dimen/typeface12sp" />

        <ImageView
            android:id="@+id/iv_cancle"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/ic_delete"/>

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/rv_buy_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="68dp" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rv_buy_recyclerview"
            android:layout_marginTop="22dp"
            android:background="#E7E7E7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/view"
            android:text="数量："
            android:textColor="#323232"
            android:textSize="@dimen/typeface13sp" />


        <LinearLayout
            android:layout_below="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginBottom="@dimen/dp_21"
            android:background="@drawable/selector_number_add_sub"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/bg_btn_style_white"
                android:text="－"
                android:textColor="#666666"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:textColor="#333333"
                android:text="1" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:textColor="#666666"
                android:background="@drawable/bg_btn_style_white"
                android:text="＋"
                android:textSize="20sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@+id/content_details"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add_shopping"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EFA13B"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="@dimen/typeface13sp" />

        <TextView
            android:id="@+id/tv_buynow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FC6464"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/typeface13sp" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_online_order_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:scaleType="fitXY"
            android:src="@drawable/home_mall_pic" />
    </FrameLayout>

</RelativeLayout>