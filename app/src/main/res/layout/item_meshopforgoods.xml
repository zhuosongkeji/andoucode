<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:src="@mipmap/shop_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="亲润官方旗舰店"
            android:textSize="@dimen/typeface15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="#EBEBEB" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="订单编号:2019061417459987"
            android:textSize="@dimen/typeface12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="待收货"
            android:textColor="@color/red"
            android:textSize="@dimen/typeface15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:background="@mipmap/shopbg">

        <ImageView
            android:id="@+id/meshop_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_5"
            android:src="@mipmap/one_test" />

        <RelativeLayout
            android:id="@+id/ry_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/meshop_pic">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_17"
                android:text="亲润孕妇化妆品套装" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="四件套" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ry_center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_17"
                android:text="￥288"
                android:textColor="@color/red"
                android:textSize="@dimen/typeface15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="X1" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="15dp"
        android:text="合计:￥288" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#F2F2F2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <Button
            android:id="@+id/btn_orderforgoodsdetails"
            android:layout_width="76dp"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_marginRight="187dp"
            android:background="@mipmap/button_n"
            android:text="订单详情"
            android:textColor="#969696"
            android:textSize="@dimen/typeface11sp" />

        <Button
            android:id="@+id/btn_orderforgoodschecklogistics"
            android:layout_width="76dp"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_marginRight="101dp"
            android:background="@mipmap/button_n"
            android:text="查看物流"
            android:textColor="#969696"
            android:textSize="@dimen/typeface11sp" />

        <Button
            android:id="@+id/btn_suregetgoods"
            android:layout_width="76dp"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_gravity="center|right"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@mipmap/button_c"
            android:text="确认收货"
            android:textColor="#61C29C"
            android:textSize="@dimen/typeface11sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F7F7F7" />
</LinearLayout>
