<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="37dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#333333"
            android:textSize="@dimen/typeface14sp"
            android:text="商家优惠券"/>
        <ImageView
            android:id="@+id/iv_cancle"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/ic_delete"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@mipmap/bg_mall_goods_discount_pic"
        >
    <TextView
        android:id="@+id/tv_rmb5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/typeface14sp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="¥"/>
        <TextView
            android:id="@+id/tv_price5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_alignBottom="@+id/tv_rmb5"
            android:layout_toRightOf="@+id/tv_rmb5"
            android:layout_marginLeft="@dimen/dp_7"
            android:textColor="@color/white"
            android:text="5"/>
        <TextView
            android:id="@+id/tv_money_off5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_price5"
            android:layout_toRightOf="@+id/tv_price5"
            android:layout_marginLeft="@dimen/dp_14"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="满100减5"/>
        <TextView
            android:id="@+id/tv_time5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_price5"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/tv_price5"
            android:layout_marginLeft="@dimen/dp_14"
            android:text="2019.11.11-12.30"/>
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_get5"
            android:layout_marginRight="24dp"
            android:background="@color/white"/>


        <TextView
            android:id="@+id/tv_get5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/typeface14sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="24dp"
            android:text="立即领取"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
