<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.hotel.HotelDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:background="@mipmap/hotel_details">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/titlt_view"
            android:layout_height="60dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_15">
                <ImageView
                    android:id="@+id/busiess_back_image"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家详情"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/typeface16sp"/>
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">
        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精尚来公寓酒店"
            android:textSize="18sp"
            android:textColor="#323232"/>

        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:background="@mipmap/ic_v_flag"
            android:layout_toRightOf="@+id/hotel_name"
            android:layout_alignBottom="@+id/hotel_name"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <LinearLayout
            android:id="@+id/busiess_dianzan1_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/busiess_dianzan1_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_zan"/>
            <TextView
                android:id="@+id/busiess_dianzancount1_textview"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/colorNavy"
                android:text="1366"
                android:layout_gravity="center"
                android:textSize="@dimen/typeface14sp"/>
        </LinearLayout>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F7F7F7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_16">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家评分"
            android:textSize="16sp"
            android:textColor="#323232"/>


        <LinearLayout
            android:id="@+id/hotel_star"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/busiess_plant1_image1"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@mipmap/ic_plant"/>
            <ImageView
                android:id="@+id/busiess_plant1_image2"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="@dimen/dp_3"
                android:src="@mipmap/ic_plant"/>
            <ImageView
                android:id="@+id/busiess_plant1_image3"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="@dimen/dp_3"
                android:src="@mipmap/ic_plant"/>
            <ImageView
                android:id="@+id/busiess_plant1_image4"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="@dimen/dp_3"
                android:src="@mipmap/ic_plant"/>
            <ImageView
                android:id="@+id/busiess_plant1_image5"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="@dimen/dp_3"
                android:src="@mipmap/ic_plant"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_16">
        <ImageView
            android:id="@+id/ic_phone"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/ic_phone_gary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="023-8888888"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/ic_phone"
            android:textColor="#969696"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_16">
        <ImageView
            android:id="@+id/ic_address"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/ic_address_gary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重庆市南岸区南坝万达广场"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/ic_address"
            android:textColor="#969696"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F7F7F7"/>
    <com.shizhefei.view.indicator.FixedIndicatorView
        android:id="@+id/indicator"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F7F7F7"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>