<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:fitsSystemWindows="true">

        <FrameLayout
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:paddingStart="15dp">

            <ImageView
                android:layout_width="8.5dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_back_black" />
        </FrameLayout>

        <TextView
            android:id="@+id/rootView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/login_txt"
            android:textColor="@color/black_28"
            android:textSize="@dimen/typeface21sp" />
    </FrameLayout>

    <EditText
        android:id="@+id/registered_phonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_edit"
        android:drawableLeft="@mipmap/registered_phonenum"
        android:drawablePadding="10dp"
        android:hint="@string/login_phonenum"
        android:inputType="phone"
        android:padding="@dimen/dp_10"
        android:textColor="#919191"
        android:textColorHint="#919191"
        android:textSize="@dimen/typeface12sp" />

    <EditText
        android:id="@+id/et_loginpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_edit"
        android:drawableLeft="@mipmap/editverification_code"
        android:drawablePadding="10dp"
        android:hint="@string/login_pwd"
        android:inputType="textPassword"
        android:padding="@dimen/dp_10"
        android:textColor="#919191"
        android:textColorHint="#919191"
        android:textSize="@dimen/typeface12sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_button"
        android:padding="@dimen/dp_10"
        android:text="@string/login_txt"
        android:textColor="@color/colorWhite" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnNewregistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/login_newuser"
            android:textColor="#5ED3AE"
            android:textSize="@dimen/typeface14sp" />

        <TextView
            android:id="@+id/forgetPasswordBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:text="@string/login_forgotpassword"
            android:textColor="#5ED3AE"
            android:textSize="@dimen/typeface14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/black_28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            android:text="@string/login_fast" />

        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/black_28" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/icon_zhiwen" />

        <ImageView
            android:id="@+id/img_weixinlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/icon_weixin" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/icon_weibo" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_login_beijin" />
</LinearLayout>
