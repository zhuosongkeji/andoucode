<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/base_title_view"/>
    <RelativeLayout
        android:background="@color/white"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_21"
        android:paddingTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/img_picleft"
            android:src="@mipmap/one_test"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_75"/>
        <RelativeLayout
            android:layout_toRightOf="@id/img_picleft"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#646464"
                android:textSize="@dimen/typeface12sp"
                android:text="亲润孕妇化妆品套装BB……"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#969696"
                android:textSize="@dimen/sp_12"
                android:text="四件套"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#E01212"
                android:textSize="@dimen/typeface12sp"
                android:text="￥288"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#969696"
                android:textSize="@dimen/sp_12"
                android:text="X1"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerVertical="true"
            android:textColor="#323232"
            android:textSize="@dimen/dp_12"
            android:text="退款原因"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ly_refundreason"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginRight="@dimen/dp_10"
                android:layout_gravity="center"
                android:text="请选择退货理由"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/icon_right_arrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:textColor="@color/red"
            android:textSize="@dimen/typeface12sp"
            android:text="退款金额:￥288"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:textColor="#333333"
            android:textSize="@dimen/typeface12sp"
            android:text="退款金额："
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="@dimen/typeface12sp"
            android:hint="选填"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="190dp">
        <TextView
            android:textColor="#555555"
            android:text="上传照片"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="@dimen/dp_25"
            android:background="#F7F7F7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
        <ImageView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/icon_add_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="@dimen/dp_27"
        android:textColor="@color/white"
        android:background="@drawable/shape_button"
        android:text="提交申请"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
</LinearLayout>
