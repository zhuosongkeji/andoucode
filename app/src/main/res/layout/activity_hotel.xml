<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HotelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@mipmap/distributor_center_beijin_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mycenter_back_image"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@mipmap/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/hotel_stay"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/typeface16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="150dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_center"

            android:orientation="vertical"
            android:elevation="6dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_10"
                android:hint="请输入酒店名称"/>

            <View
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="入住日期"
                    android:drawableRight="@mipmap/icon_calendar"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="离开日期"
                    android:drawableRight="@mipmap/icon_calendar"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="入住人数"
                android:drawableRight="@mipmap/me_icon_uncheck"

                />
            <View
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置我喜欢的星级/价格"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawableRight="@mipmap/ic_jiantouright_gary"
                />
            <View
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/shape_button"
                android:gravity="center"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="查找酒店"/>
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@mipmap/icon_search"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15">
        <LinearLayout
            android:id="@+id/mycenter_foodorder_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_center_foodorder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/center_foodorder"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mycenter_hotelorder_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_center_hotelorder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/center_hotelorder"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mycenter_vegetablemarket_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_center_vegetablemarket"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/center_vegetablemarket"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mycenter_shoporder_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_center_shoporder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/center_shoporder"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mycenter_shoporder_layout1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_center_shoporder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/center_shoporder"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:text="猜你喜欢"
        android:textSize="@dimen/dp_20"
        android:textStyle="bold"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:background="@color/colorWhite"
    >

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/ic_busiess_canting" />
    <!--名称-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@id/iv"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="精尚来公寓酒店"/>

    <LinearLayout
        android:id="@+id/busiess_dianzan1_layout"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/busiess_dianzan1_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_zan"/>
        <TextView
            android:id="@+id/busiess_dianzancount1_textview"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/colorNavy"
            android:text="1366"
            android:layout_gravity="center"
            android:textSize="@dimen/typeface14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_star"
        android:layout_alignStart="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="@dimen/dp_5">
        <ImageView
            android:id="@+id/busiess_plant1_image1"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@mipmap/ic_plant"/>
        <ImageView
            android:id="@+id/busiess_plant1_image2"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="@dimen/dp_3"
            android:src="@mipmap/ic_plant"/>
        <ImageView
            android:id="@+id/busiess_plant1_image3"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="@dimen/dp_3"
            android:src="@mipmap/ic_plant"/>
        <ImageView
            android:id="@+id/busiess_plant1_image4"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="@dimen/dp_3"
            android:src="@mipmap/ic_plant"/>
        <ImageView
            android:id="@+id/busiess_plant1_image5"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="@dimen/dp_3"
            android:src="@mipmap/ic_plant"/>
    </LinearLayout>


    <LinearLayout
        android:layout_alignBottom="@+id/iv"
        android:layout_toRightOf="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_2">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_address_gary"/>
        <TextView
            android:id="@+id/busiess_address1_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/dp_3"
            android:text="南岸区光电路18号翡翠明珠2幢"/>
    </LinearLayout>


</RelativeLayout>


</LinearLayout>