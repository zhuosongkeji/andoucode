<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
    tools:context=".activity.hotel.HotelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/hotel_home">

<!--            <ImageView-->
<!--                android:id="@+id/mycenter_back_image"-->
<!--                android:layout_width="16dp"-->
<!--                android:layout_height="16dp"-->
<!--                android:layout_marginLeft="@dimen/dp_15"-->
<!--                android:layout_marginTop="@dimen/dp_15"-->
<!--                android:src="@mipmap/ic_back" />-->

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_marginTop="@dimen/dp_15"-->
<!--                android:text="@string/hotel_stay"-->
<!--                android:textColor="@color/colorWhite"-->
<!--                android:textSize="@dimen/typeface16sp" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/titlt_view"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_15">
                    <ImageView
                        android:id="@+id/busiess_back_image"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="酒店住宿"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/typeface16sp"/>
                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="113dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_center"
            android:elevation="6dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@null"
                android:hint="请输入酒店名称"
                android:textSize="@dimen/sp_14"
                android:padding="@dimen/dp_10"
                android:textColor="#969696" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/icon_calendar"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/sp_14"
                    android:text="入住日期" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/sp_14"
                    android:drawableRight="@mipmap/icon_calendar"
                    android:padding="@dimen/dp_10"
                    android:text="离开日期" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawableRight="@mipmap/me_icon_uncheck"
                android:padding="@dimen/dp_10"
                android:text="入住人数"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/sp_14"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawableRight="@mipmap/ic_jiantouright_gary"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_color_normal"
                android:text="设置我喜欢的星级/价格" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/shape_button"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查找酒店"
                    android:textSize="@dimen/dp_16"
                    android:textColor="@color/colorWhite" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@mipmap/icon_search" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15">

        <LinearLayout
            android:id="@+id/mycenter_foodorder_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_hight_hotel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/hotel_hight_hotel"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mycenter_hotelorder_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_chain_hotel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/hotel_chain_hotel"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mycenter_vegetablemarket_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_boutique_hotel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/hotel_boutique_hotel"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mycenter_shoporder_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_today_sale" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/hotel_today_sale"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mycenter_shoporder_layout1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_hour_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/hotel_hour_home"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:text="猜你喜欢"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">
        <ImageView
            android:id="@+id/busiess_tupian1_image"
            android:layout_width="130dp"
            android:layout_height="107dp"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/ic_busiess_canting"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/hotel_name"
                android:layout_width="match_parent"
                android:layout_height="25dp">
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/busiess_name1_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="精尚来公寓酒店"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/typeface14sp" />
                    <ImageView
                        android:id="@+id/busiess_v1_image"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:src="@mipmap/ic_v"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/busiess_dianzan1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <ImageView
                        android:id="@+id/busiess_dianzan1_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_zan"/>
                    <TextView
                        android:id="@+id/busiess_dianzancount1_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/colorNavy"
                        android:text="1366"
                        android:layout_gravity="center"
                        android:textSize="@dimen/typeface14sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/hotel_star"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/dp_5">
                <ImageView
                    android:id="@+id/busiess_plant1_image1"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/ic_plant"/>
                <ImageView
                    android:id="@+id/busiess_plant1_image2"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:src="@mipmap/ic_plant"/>
                <ImageView
                    android:id="@+id/busiess_plant1_image3"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:src="@mipmap/ic_plant"/>
                <ImageView
                    android:id="@+id/busiess_plant1_image4"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:src="@mipmap/ic_plant"/>
                <ImageView
                    android:id="@+id/busiess_plant1_image5"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:src="@mipmap/ic_plant"/>
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_address_gary"/>
                <TextView
                    android:id="@+id/busiess_address1_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:text="重庆市南岸区南坪万达广场"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>