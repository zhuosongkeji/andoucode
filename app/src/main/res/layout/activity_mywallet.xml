<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zskjprojectj.andouclient.view.TopView
        android:id="@+id/alltopview"
        app:topview_left="@mipmap/back_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>
    <RelativeLayout
        android:background="@color/colorNavy"
        android:layout_width="match_parent"
        android:padding="@dimen/dp_10"
        android:layout_height="@dimen/dp_150">
        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_balanceofnum"
                android:text="￥360"
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/typeface12sp"
                android:text="当前余额"
                android:textColor="@color/colorWhite"
                android:layout_below="@id/tv_balanceofnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_balanceofprepaid"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_chongzhibutton"
            android:text="余额充值"
            android:layout_marginRight="@dimen/dp_105"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_28" />
        <Button
            android:id="@+id/btn_withdrawal"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_chongzhibutton"
            android:text="提现"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_28" />
    </RelativeLayout>

    <com.shizhefei.view.indicator.FixedIndicatorView
        android:id="@+id/indicator"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
