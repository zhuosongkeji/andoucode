<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@mipmap/ic_beijin_navy">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15">
                    <ImageView
                        android:id="@+id/postbar_back_image"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tieba_page"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/typeface16sp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/dp_13">
                <LinearLayout
                    android:id="@+id/postbar_busiessclassify_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/message_classify"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:src="@mipmap/ic_busiess_xiala"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01">
                    <TextView
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/postbar_address_select_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_select"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:src="@mipmap/ic_busiess_xiala"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01">
                    <TextView
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/postbar_paixufangshi_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/paixufangshi"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:src="@mipmap/ic_busiess_xiala"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:background="@color/colorGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/dp_10">
                <TextView
                    android:id="@+id/postbar_title1_textview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center|left"
                    android:text="求销售大神"
                    android:textSize="@dimen/typeface17sp"
                    android:textColor="@color/colorBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:id="@+id/postbar_touxiang1_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@mipmap/ic_postbar_touxiang"/>
                    <TextView
                        android:id="@+id/postbar_name1_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="幕看日西沉"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"/>

                    <LinearLayout
                        android:id="@+id/postbar_zhaopin_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="招聘"
                            android:textColor="@color/colorRed"/>
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="13dp"
                            android:src="@mipmap/ic_up_red"
                            android:layout_marginLeft="@dimen/dp_6" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/postbar_zhaopin_countent1_txetview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="本人经营者一家男装服装店，位于南岸区万达广场，现根据业务需求，需扩招销售人员4名，要求形象端庄，有销售男装经验优先"/>
                <ImageView
                    android:id="@+id/postbar_picture1_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:src="@mipmap/ic_postbar_picture"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_8">
                    <TextView
                        android:id="@+id/postbar_date1_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-08-21"/>
                    <TextView
                        android:id="@+id/postbar_time1_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="13:49"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="22dp"
                            android:src="@mipmap/ic_comment_gary"/>
                        <TextView
                            android:id="@+id/postbar_commont_count1_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="198"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:background="@color/colorGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/dp_10">
                <TextView
                    android:id="@+id/postbar_title2_textview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center|left"
                    android:text="求销售大神"
                    android:textSize="@dimen/typeface17sp"
                    android:textColor="@color/colorBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:id="@+id/postbar_touxiang2_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@mipmap/ic_postbar_touxiang"/>
                    <TextView
                        android:id="@+id/postbar_name2_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="幕看日西沉"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"/>

                    <LinearLayout
                        android:id="@+id/postbar_qiuzhi_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="求职"
                            android:textColor="@color/colorRed"/>

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/postbar_zhaopin_countent2_txetview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="本人经营者一家男装服装店，位于南岸区万达广场，现根据业务需求，需扩招销售人员4名，要求形象端庄，有销售男装经验优先"/>
                <ImageView
                    android:id="@+id/postbar_picture2_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:src="@mipmap/ic_postbar_picture"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_8">
                    <TextView
                        android:id="@+id/postbar_date2_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-08-21"/>
                    <TextView
                        android:id="@+id/postbar_time2_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="15:30"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="22dp"
                            android:src="@mipmap/ic_comment_gary"/>
                        <TextView
                            android:id="@+id/postbar_commont_count2_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="198"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
