<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorNavy">

        <include layout="@layout/base_title_view" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/daifukuanContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/colorNavy"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="待付款"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/typeface18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="等待卖家付款"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/typeface13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_30"
                    android:src="@mipmap/icon_paywait" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/daifahuoContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/colorNavy"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="待发货"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/typeface18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="商家正在积极的给您发货哦"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/typeface13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_30"
                    android:src="@mipmap/icon_orderbox" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/daishouhuoContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/colorNavy"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="待收货"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/typeface18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="等待买家收货"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/typeface13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_30"
                    android:src="@mipmap/icon_getgoods" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7" />

            <TextView
                android:id="@+id/orderNumTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_18"
                android:text="订单编号:20190723154645646848"
                android:textColor="#646464"
                android:textSize="@dimen/typeface13sp" />

            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_14"
                android:text="支付时间:2018-03-12 14:44:06"
                android:textColor="#646464"
                android:textSize="@dimen/typeface13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#F7F7F7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dp_80"
                android:padding="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weizhi_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/receiverName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#646464"
                            tools:text="收货人:王杨" />

                        <TextView
                            android:id="@+id/mobileTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"
                            tools:text="17355875423" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/addressTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#646464"
                        tools:text="收货地址:重庆市南岸区南坪万达广场重庆市南岸区南坪万达广场重庆市南岸区南坪万达广场重庆市南岸区南坪万达广场" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#F7F7F7" />

            <LinearLayout
                android:id="@+id/goodsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <Button
                android:id="@+id/btn_refund"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_gravity="center|right"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@mipmap/button_n"
                android:text="退货/退款"
                android:textColor="#969696"
                android:textSize="@dimen/typeface12sp"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#F7F7F7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/totalCountTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="21dp"
                    android:text="共一个商品(合计)"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface12sp" />

                <TextView
                    android:id="@+id/totalTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="￥288"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="运费"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface12sp" />

                <TextView
                    android:id="@+id/freightTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="￥10"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="实付款"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface12sp" />

                <TextView
                    android:id="@+id/costTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="￥139"
                    android:textColor="@color/red"
                    android:textSize="@dimen/typeface12sp" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#F7F7F7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10">

                <Button
                    android:id="@+id/btn_checkthelogistics"
                    android:layout_width="90dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="115dp"
                    android:background="@mipmap/button_n"
                    android:text="查看物流"
                    android:textColor="#646464"
                    android:textSize="@dimen/typeface12sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_gotopaymentdetail"
                    android:layout_width="90dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="11dp"
                    android:background="@mipmap/button_c"
                    android:text="去付款"
                    android:textColor="#61C29C"
                    android:textSize="@dimen/typeface12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
