<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="@color/white"
        android:orientation="horizontal">



    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_13"
        >

        <TextView
            android:id="@+id/tv_today_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日上新"
            android:textColor="#333333"
            android:textSize="@dimen/typeface14sp" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/typeface11sp"
            android:layout_below="@+id/tv_today_new"
            android:text="定期更新"
            android:textColor="#F8D587" />

        <ImageView
            android:id="@+id/iv_tv_today_new_image"
            android:layout_width="@dimen/dp_80"
            android:layout_height="107dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_13"
            android:src="@mipmap/gengxin" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E7E7E7"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_hot_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爆款合集"
                android:textColor="#333333"
                android:paddingTop="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_26"
                android:textSize="@dimen/typeface14sp" />

            <TextView
                android:id="@+id/tv_hot_this"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hot_all"
                android:textSize="@dimen/typeface11sp"
                android:text="想要的爆款都在这里"
                android:paddingLeft="@dimen/dp_26"
                android:textColor="#F8D587" />

            <ImageView
                android:id="@+id/iv_hot_image"
                android:layout_width="91dp"
                android:layout_height="66dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/dp_5"
                android:src="@mipmap/baokuan" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E7E7E7"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="海外合集"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_11"
                    android:textSize="@dimen/typeface14sp" />

                <ImageView
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/biao" />

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E7E7E7"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="有好货"
                    android:layout_marginTop="@dimen/dp_11"
                    android:textColor="#333333"
                    android:textSize="@dimen/typeface14sp" />

                <ImageView
                    android:layout_width="76dp"
                    android:layout_gravity="center"
                    android:layout_height="47dp"
                    android:src="@mipmap/biao" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

</LinearLayout>