<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:src="@mipmap/hotelicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="精尚来公寓酒店"
            android:textColor="#646464"
            android:textSize="@dimen/typeface15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="#EBEBEB" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="订单编号:2019061417459987"
            android:textColor="#646464"
            android:textSize="@dimen/typeface12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="待入住"
            android:textColor="@color/red"
            android:textSize="@dimen/typeface15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:background="@mipmap/shopbg">

        <ImageView
            android:id="@+id/meshop_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_5"
            android:src="@mipmap/hotelbg" />

        <RelativeLayout
            android:id="@+id/ry_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/meshop_pic">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:text="阳光大床房（带大阳台）"
                android:textColor="#646464" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="X1"
                android:textColor="#646464" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ry_center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_17"
                android:text="¥288"
                android:textColor="@color/red"
                android:textSize="@dimen/typeface15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="15dp"
        android:text="合计:¥288"
        android:textColor="@color/red" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#F2F2F2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <Button
            android:id="@+id/btn_hotelorderstayindetails"
            android:layout_width="76dp"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@mipmap/button_c"
            android:text="订单详情"
            android:textColor="#61C29C"
            android:textSize="@dimen/typeface11sp" />
        <!--        <Button-->
        <!--            android:textColor="#61C29C"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:textSize="@dimen/typeface11sp"-->
        <!--            android:layout_marginRight="@dimen/dp_15"-->
        <!--            android:layout_gravity="center|right"-->
        <!--            android:background="@mipmap/button_c"-->
        <!--            android:layout_width="76dp"-->
        <!--            android:text="去付款"-->
        <!--            android:layout_height="@dimen/dp_26"/>-->
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F7F7F7" />
</LinearLayout>
