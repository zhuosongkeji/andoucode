<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_mall_list_img"
            android:layout_width="165dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:src="@mipmap/tp_mall_goods" />

        <TextView
            android:id="@+id/tv_mall_list_name"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_14"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="飞利浦(PHILIPS) 电动牙刷 成人 声波震动钻石系列......."
            android:textColor="#202020"
            android:textSize="@dimen/typeface12sp" />

        <TextView
            android:id="@+id/tv_mall_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:text="¥1299"
            android:textColor="#FE5F50"
            android:textSize="@dimen/dp_10" />
    </LinearLayout>

</LinearLayout>