<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zskjprojectj.andouclient.view.TopView
        android:id="@+id/alltopview"
        app:topview_left="@mipmap/back_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>

    <LinearLayout
        android:background="@drawable/shape_layout_small"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/typeface15sp"
            android:text="@string/dangqianyue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/red"
            android:textSize="@dimen/dp_20"
            android:id="@+id/tv_balanceofmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/lightgrey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_layout_small"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/dp_10"
            android:text="@string/chongzhijine"
            android:textSize="@dimen/typeface15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/lightgrey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
       <EditText
           android:hint="@string/chongzhinum"
           android:layout_width="match_parent"
           android:background="@null"
           android:textSize="@dimen/typeface15sp"
           android:padding="@dimen/dp_10"
           android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/lightgrey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:background="@drawable/shape_layout_small"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:text="@string/callnum"
            android:textSize="@dimen/typeface15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@null"
            android:maxLength="11"
            android:hint="@string/callphonenum"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>
    <View
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/lightgrey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_layout_small"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/chongzhifangshi"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/typeface15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/lightgrey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
