<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_window_close"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:background="@drawable/zone_member_vip_header_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/mTextTitleView"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_dialog_top_white"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="温馨提示"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/content"
            style="@style/mTextTitleView"
            android:layout_width="match_parent"
            android:background="@drawable/bg_dialog_top_white"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/dp_12"
            android:textColor="@color/black"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/submit"
                style="@style/mButtonViewR5"
                android:layout_width="match_parent"
                android:text="好的" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"/>
</LinearLayout>