<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10">
        <TextView
            android:id="@+id/postbar_title1_textview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text="求销售大神"
            android:textSize="@dimen/typeface17sp"
            android:textColor="@color/colorBlack"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/postbar_touxiang1_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/ic_postbar_touxiang"/>
            <TextView
                android:id="@+id/postbar_name1_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="幕看日西沉"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/postbar_zhaopin_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="招聘"
                    android:textColor="@color/colorRed"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/ic_up_red"
                    android:layout_marginLeft="@dimen/dp_6" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/postbar_zhaopin_countent1_txetview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="本人经营者一家男装服装店，位于南岸区万达广场，现根据业务需求，需扩招销售人员4名，要求形象端庄，有销售男装经验优先"/>
        <ImageView
            android:id="@+id/postbar_picture1_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="@dimen/dp_3"
            android:src="@mipmap/ic_postbar_picture"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_8">
            <TextView
                android:id="@+id/postbar_date1_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-08-21"/>
            <TextView
                android:id="@+id/postbar_time1_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="13:49"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/ic_comment_gary"/>
                <TextView
                    android:id="@+id/postbar_commont_count1_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="198"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
