<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/check_in_business_seemore_layout"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="@dimen/dp_15"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="@dimen/dp_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_check_in_busiess" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/see_more"
                android:textColor="@color/colorOrange" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_3"
                android:src="@mipmap/ic_jiantouright_orange" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/check_in_business_seemore_layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/check_in_busiess1_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/check_in_busiess1_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/ic_jiabaiwei" />

                <TextView
                    android:id="@+id/check_in_busiessname1_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="佳百味" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_in_busiess2_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/check_in_busiess2_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/ic_wlfx" />

                <TextView
                    android:id="@+id/check_in_busiessname2_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="湾里饭香" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_in_busiess3_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/check_in_busiess3_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/ic_jiabaiwei" />

                <TextView
                    android:id="@+id/check_in_busiessname3_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="佳百味" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_in_busiess4_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/check_in_busiess4_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/ic_wlfx" />

                <TextView
                    android:id="@+id/check_in_busiessname4_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="湾里饭香" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
