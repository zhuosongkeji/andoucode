<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_20">

    <ImageView
        android:id="@+id/busiess_tupian1_image"
        android:layout_width="@dimen/dp_100"
        android:layout_height="90dp"
        android:layout_marginRight="@dimen/dp_20"
        android:src="@mipmap/ic_busiess_canting" />

    <TextView
        android:id="@+id/busiess_name1_textview"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/busiess_tupian1_image"
        android:text="精尚来公寓酒店"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/typeface12sp" />

    <LinearLayout
        android:id="@+id/hotel_star"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@+id/busiess_name1_textview"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/busiess_tupian1_image"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/busiess_plant1_image1"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@mipmap/ic_plant" />

        <ImageView
            android:id="@+id/busiess_plant1_image2"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="@dimen/dp_3"
            android:src="@mipmap/ic_plant" />

        <ImageView
            android:id="@+id/busiess_plant1_image3"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="@dimen/dp_3"
            android:src="@mipmap/ic_plant" />

        <ImageView
            android:id="@+id/busiess_plant1_image4"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="@dimen/dp_3"
            android:src="@mipmap/ic_plant" />

        <ImageView
            android:id="@+id/busiess_plant1_image5"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="@dimen/dp_3"
            android:src="@mipmap/ic_plant" />
    </LinearLayout>

    <ImageView
        android:id="@+id/busiess_dianzan1_image"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/busiess_dianzancount1_textview"
        android:src="@mipmap/ic_zan" />

    <TextView
        android:id="@+id/busiess_dianzancount1_textview"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="1366"
        android:textColor="@color/colorNavy"
        android:textSize="@dimen/typeface12sp" />

    <LinearLayout
        android:id="@+id/hotel_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_star"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/busiess_tupian1_image"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="7dp"
            android:layout_height="9dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_address_gary" />

        <TextView
            android:id="@+id/busiess_address1_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:maxLines="1"
            android:textSize="@dimen/typeface9sp"
            android:text="重庆市南岸区南坪万达广场" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/busiess_tupian1_image"
        android:layout_toRightOf="@+id/busiess_tupian1_image"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="@dimen/typeface10sp"
            android:textColor="#FF493E"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="187"
            android:textColor="#FF493E"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:textColor="#969696"
            android:text="起" />
    </LinearLayout>

</RelativeLayout>