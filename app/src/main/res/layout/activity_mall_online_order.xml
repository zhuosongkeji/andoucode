<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.mall.MallOnlineOrderActivity">


        <RelativeLayout
            android:id="@+id/content_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="21dp">

            <ImageView
                android:id="@+id/iv_online_order_image"
                android:layout_width="83dp"
                android:layout_height="@dimen/dp_75"
                android:src="@drawable/mall_goods_details_pic" />

            <TextView
                android:id="@+id/tv_online_order_name"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@+id/iv_online_order_image"
                android:text="亲润孕妇化妆品套装BB霜遮瑕 孕妇护肤品豆...... "
                android:textColor="#404040"
                android:textSize="@dimen/typeface12sp" />

            <TextView
                android:id="@+id/tv_online_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_online_order_image"
                android:layout_alignParentEnd="true"
                android:text="¥288"
                android:textColor="#F54029"
                android:textSize="@dimen/typeface12sp" />

            <TextView
                android:id="@+id/tv_online_order_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_online_order_image"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@+id/iv_online_order_image"
                android:text="四件套"
                android:textColor="#787878"
                android:textSize="@dimen/typeface12sp" />

            <TextView
                android:id="@+id/tv_online_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_online_order_image"
                android:layout_alignParentEnd="true"
                android:text="X1"
                android:textColor="#787878"
                android:textSize="@dimen/typeface12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#F7F7F7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_22"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="21dp">

            <TextView
                android:id="@+id/tv_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王杨"
                android:textColor="#323232"
                android:textSize="@dimen/typeface12sp" />

            <TextView
                android:id="@+id/tv_client_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_client_name"
                android:layout_marginTop="@dimen/dp_16"
                android:text="重庆市 南岸区 南坪 重庆市南岸区南坝万达广场1号写字楼6栋10-8"
                android:textColor="#787878"
                android:textSize="@dimen/typeface11sp" />

            <TextView
                android:id="@+id/tv_client_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/iv_client_into"
                android:text="188888888888"
                android:textColor="#323232"
                android:textSize="@dimen/typeface12sp" />

            <ImageView
                android:id="@+id/iv_client_into"
                android:layout_width="6dp"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentEnd="true"
                android:background="@mipmap/icon_right_arrows" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:background="@mipmap/cut_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#F7F7F7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_21"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_21">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运送方式"
                android:textColor="#565656"
                android:textSize="@dimen/typeface13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="免运费"
                android:textColor="#F54029"
                android:textSize="@dimen/typeface12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_21"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_21">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="使用积分"
                android:textColor="#565656"
                android:textSize="@dimen/typeface13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/iv_integral_into"
                android:text="1000"
                android:textColor="#969696"
                android:textSize="@dimen/typeface12sp" />

            <ImageView
                android:id="@+id/iv_integral_into"
                android:layout_width="6dp"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/triangle_icon" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#F7F7F7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_21"
            android:paddingBottom="@dimen/dp_21"
            android:text="请选择支付方式"
            android:textColor="#565656"
            android:textSize="@dimen/typeface13sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_17"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">

            <ImageView
                android:id="@+id/tv_union"
                android:layout_width="38dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_union_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@+id/tv_union"
                android:text="银联支付"
                android:textColor="#646464"
                android:textSize="@dimen/typeface12sp" />

             <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_union_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:button="@drawable/selector_checkbox" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_17"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">

            <ImageView
                android:id="@+id/tv_weixin"
                android:layout_width="38dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_weixin_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@+id/tv_weixin"
                android:text="银联支付"
                android:textColor="#646464"
                android:textSize="@dimen/typeface12sp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_weixin_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:button="@drawable/selector_checkbox" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_17"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">

            <ImageView
                android:id="@+id/tv_alipay"
                android:layout_width="38dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_alipay_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@+id/tv_alipay"
                android:text="银联支付"
                android:textColor="#646464"
                android:textSize="@dimen/typeface12sp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_alipay_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:button="@drawable/selector_checkbox" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_17"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">

            <ImageView
                android:id="@+id/tv_balance"
                android:layout_width="38dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_balance_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@+id/tv_balance"
                android:text="银联支付"
                android:textColor="#646464"
                android:textSize="@dimen/typeface12sp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_balance_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:button="@drawable/selector_checkbox" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#F7F7F7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_21"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_21">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计"
                android:textColor="#565656"
                android:textSize="@dimen/typeface13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="¥288"
                android:textColor="#F54029"
                android:textSize="@dimen/typeface12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#F7F7F7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="49dp"
                android:gravity="center"
                android:text="¥288"
                android:textColor="#F54029"
                android:textSize="@dimen/dp_11" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#FC6464"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_18"
                    android:src="@mipmap/icon_buynow_pay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即购买"
                    android:textColor="@color/white"
                    android:textSize="@dimen/typeface13sp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>