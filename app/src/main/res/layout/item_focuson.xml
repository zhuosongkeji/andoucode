<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/focuson_tupian1_image"
        android:layout_width="115dp"
        android:layout_height="90dp"
        android:layout_marginEnd="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_busiess_canting" />

    <TextView
        android:id="@+id/focuson_name1_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/focuson_tupian1_image"
        android:textColor="#ff323232"
        android:textSize="12sp"
        tools:text="北平楼涮羊肉" />

    <com.willy.ratingbar.ScaleRatingBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/simpleRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/focuson_name1_textview"
        android:layout_toEndOf="@+id/focuson_tupian1_image"
        app:srb_drawableEmpty="@mipmap/ic_plant_gray"
        app:srb_drawableFilled="@mipmap/ic_plant"
        app:srb_isIndicator="true"
        app:srb_numStars="5"
        app:srb_starHeight="13dp"
        app:srb_starPadding="4dp"
        app:srb_starWidth="14dp" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignTop="@+id/focuson_dianzancount1_textview"
        android:layout_alignBottom="@+id/focuson_dianzancount1_textview"
        android:layout_gravity="center"
        android:layout_toStartOf="@+id/focuson_dianzancount1_textview"
        android:src="@mipmap/ic_zan"
        android:visibility="visible" />

    <TextView
        android:id="@+id/focuson_dianzancount1_textview"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginLeft="6dp"
        android:textColor="@color/colorNavy"
        android:textSize="12sp"
        android:visibility="visible"
        tools:text="1366" />

    <LinearLayout
        android:id="@+id/hotel_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simpleRatingBar"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_toEndOf="@+id/focuson_tupian1_image"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_address_gary" />

        <TextView
            android:id="@+id/busiess_address1_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#969696"
            android:textSize="10sp"
            tools:text="重庆市南岸区南坪万达广场" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/focuson_tupian1_image"
        android:layout_toEndOf="@+id/focuson_tupian1_image"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_phone"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_phone_gary" />

        <TextView
            android:id="@+id/tv_focusonnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="023-8888888"
            android:textColor="#969696"
            android:textSize="10sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_focusoncheckmerchants"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/focuson_tupian1_image"
        android:background="@drawable/bg_see_busiess"
        android:gravity="center"
        android:text="查看商家"
        android:textColor="#ffffff"
        android:textSize="10sp"
        />
</RelativeLayout>