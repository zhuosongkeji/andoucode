<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorNavy">
        <include layout="@layout/base_title_view" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_infodetails"
        android:text="标题"
        android:textSize="@dimen/typeface15sp"
        android:textColor="#323232"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_contentdetails"
        android:text="内容内容"
        android:textSize="@dimen/typeface13sp"
        android:textColor="#323232"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
