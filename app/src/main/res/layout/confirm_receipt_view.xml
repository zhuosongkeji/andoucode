<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="195dp"
    android:background="@drawable/bg_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="#F6F6F6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认收货"
            android:textColor="#323232"
            android:layout_centerInParent="true"
            android:textSize="@dimen/typeface14sp" />

        <ImageView
            android:id="@+id/iv_cancle"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@mipmap/ic_delete" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_105"
        android:textColor="#323232"
        android:textSize="@dimen/typeface12sp"
        android:gravity="center_horizontal"
        android:paddingTop="24dp"
        android:text="确认已经收到货品" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F6F6F6">

        <Button
            android:id="@+id/btn_confirm_receipt"
            android:layout_width="90dp"
            android:layout_height="@dimen/dp_28"
            android:layout_centerInParent="true"
            android:text="确认收货"
            android:textSize="@dimen/typeface12sp"
            android:background="@drawable/button_circle_green" />

    </RelativeLayout>

</LinearLayout>