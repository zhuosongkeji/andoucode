<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="21dp">

        <ImageView
            android:id="@+id/iv_online_order_image"
            android:layout_width="83dp"
            android:layout_height="@dimen/dp_75"
            android:src="@drawable/mall_goods_details_pic" />

        <TextView
            android:id="@+id/tv_online_order_name"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/iv_online_order_image"
            android:text="亲润孕妇化妆品套装BB霜遮瑕 孕妇护肤品豆...... "
            android:textColor="#404040"
            android:textSize="@dimen/typeface12sp" />

        <TextView
            android:id="@+id/tv_online_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_online_order_image"
            android:layout_alignParentEnd="true"
            android:text="¥288"
            android:textColor="#F54029"
            android:textSize="@dimen/typeface12sp" />

        <TextView
            android:id="@+id/tv_online_order_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_online_order_image"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/iv_online_order_image"
            android:text="四件套"
            android:textColor="#787878"
            android:textSize="@dimen/typeface12sp" />

        <TextView
            android:id="@+id/tv_online_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_online_order_image"
            android:layout_alignParentEnd="true"
            android:text="X1"
            android:textColor="#787878"
            android:textSize="@dimen/typeface12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F7F7F7" />


</LinearLayout>